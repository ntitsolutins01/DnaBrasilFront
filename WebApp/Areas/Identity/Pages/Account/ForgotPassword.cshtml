@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperar Senha?";
    Layout = "_LayoutLogin";
}

<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo pull-left">
            <img src="~/assets/images/logo.png" height="94" alt="Dna do Brasil" />
        </a>
        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i> Recuperar Senha</h2>
            </div>
            <div class="panel-body">
                <div class="alert alert-warning">
                    <p class="m-0">Seja bem vindo ao sistema Dna Brasil! Para utilizar o sistema configure sua nova senha de acesso abaixo!</p>
                </div>
                <div class="alert alert-success">
                    <p class="m-0">Após alterar sua senha acesse o sistema Dna Brasil com seu usuário e senha!</p>
                </div>
                <form method="post" autocomplete="off" id="form">
                    @if (Request.HasFormContentType)
                    {
                        <div asp-validation-summary="All" class="alert alert-mini alert-danger margin-bottom-30"></div>
                    }
                    <div class="form-group mb-0">
                        <div class="input-group">
                            <input asp-for="Input.Email" type="text" placeholder="E-mail" class="form-control form-control-lg" />
                            <span class="input-group-btn">
                                <button class="btn btn-primary btn-lg" type="submit">Recuperar!</button>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2024. Todos os direitos reservados.</p>
    </div>
</section>

@section Scripts {
    <script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/js/login.js"></script>
}