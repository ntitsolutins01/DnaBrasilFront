@{
	ViewData["Title"] = "Inclusão de Modalidade";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="vModalidade">
<div class="row">
	<div class="col-md-12">
		@using (@Html.BeginForm("Create", "Modalidade", FormMethod.Post, new { id = "formModalidade", @class = "form-horizontal" }))

		{
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
					</div>

					<h2 class="panel-title">Cadastro de Modalidade</h2>
				</header>
				<div class="panel-body">

					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Modalidade <span class="required">*</span></label>
						<div class="col-sm-9">
							<input type="text" name="nome" class="form-control"
								   maxlength="80"
								   title="Por favor informe a Modalidade." required />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Vo2 Max Inicial <span class="required">*</span></label>
						<div class="col-sm-3">
							<input type="number" name="vo2MaxIni" class="form-control" maxlength="2"  
							       title="Por favor informe o Vo2 Max Inicial." required />
						</div>
						<label class="col-sm-2 control-label text-sm-right pt-2">Vo2 Max Final <span class="required">*</span></label>
						<div class="col-sm-3">
							<input type="number" name="vo2MaxFim" class="form-control" maxlength="2"  
							       title="Por favor informe o Vo2 Max Final." required />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Vinte Metros Ini <span class="required">*</span></label>
						<div class="col-sm-9">
							<input type="number" name="vinteMetrosIni" class="form-control" maxlength="2"
									   title="Por favor informe o Vinte Metros Inicial." required />
						</div>
							<label class="col-sm-3 control-label text-sm-right pt-2">Vinte Metros Fim <span class="required">*</span></label>
						<div class="col-sm-9">
							<input type="number" name="vinteMetrosFim" class="form-control" maxlength="2"
									   title="Por favor informe o Vinte Metros Final." required />
						</div>
					</div>
					<div class="form-group row">
							<label class="col-sm-3 control-label text-sm-right pt-2">Shutlle Run Ini <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="shutlleRunIni" class="form-control" maxlength="2"
									   title="Por favor informe o Shutlle Run Inicial." required />
						</div>
							<label class="col-sm-3 control-label text-sm-right pt-2">Shutlle Run Fim <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="shutlleRunFim" class="form-control" maxlength="2"
									   title="Por favor informe o Shutlle Run Final." required />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Flexibilidade Ini <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="flexibilidadeIni" class="form-control" maxlength="2"
							       title="Por favor informe o Flexibilidade Inicial." required />
						</div>
						<label class="col-sm-3 control-label text-sm-right pt-2">Flexibilidade Fim <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="flexibilidadeFim" class="form-control" maxlength="2"
							       title="Por favor informe o Flexibilidade Final." required />
						</div>
					</div>
					<div class="form-group row">
							<label class="col-sm-3 control-label text-sm-right pt-2">Preensao Manual Ini <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="preensaoManualIni" class="form-control" maxlength="2"
									   title="Por favor informe o Preensao Manual Inicial." required />
						</div>
							<label class="col-sm-3 control-label text-sm-right pt-2">Preensao Manual Fim <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="preensaoManualFim" class="form-control" maxlength="2"
									   title="Por favor informe o Preensao Manual Final." required />
						</div>
					</div>
					<div class="form-group row">
							<label class="col-sm-3 control-label text-sm-right pt-2">Abdominal Prancha Ini <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="abdominalPranchaIni" class="form-control" maxlength="2"
									   title="Por favor informe o Abdominal Prancha Inicial." required />
						</div>
							<label class="col-sm-3 control-label text-sm-right pt-2">Abdominal Prancha Ini <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="abdominalPranchaFim" class="form-control" maxlength="2"
									   title="Por favor informe o Abdominal Prancha Final." required />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Impulsao Ini <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="impulsaoIni" class="form-control" maxlength="2"
							       title="Por favor informe o Impulsao Inicial." required />
						</div>
						<label class="col-sm-3 control-label text-sm-right pt-2">Impulsao Fim <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="impulsaoFim" class="form-control" maxlength="2"
							       title="Por favor informe o Impulsao Final." required />
						</div>
					</div>
					<div class="form-group row">
							<label class="col-sm-3 control-label text-sm-right pt-2">Peso Ini <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="pesoIni" class="form-control" maxlength="2"
									   title="Por favor informe o Peso Inicial." required />
						</div>
							<label class="col-sm-3 control-label text-sm-right pt-2">Peso Fim <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="pesoFim" class="form-control" maxlength="2"
									   title="Por favor informe o Peso Final." required />
						</div>
					</div>
					<div class="form-group row">
							<label class="col-sm-3 control-label text-sm-right pt-2">Envergadura Ini <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="envergaduraIni" class="form-control" maxlength="2"
									   title="Por favor informe o Envergadura Inicial." required />
						</div>
							<label class="col-sm-3 control-label text-sm-right pt-2">Envergadura Fim <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="envergaduraFim" class="form-control" maxlength="2"
									   title="Por favor informe o Envergadura Final." required />
						</div>
					</div>
					<div class="form-group row">
							<label class="col-sm-3 control-label text-sm-right pt-2">Altura Ini <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="alturaIni" class="form-control" maxlength="2"
									   title="Por favor informe o Altura Inicial." required />
						</div>
							<label class="col-sm-3 control-label text-sm-right pt-2">Altura Fim <span class="required">*</span></label>
						<div class="col-sm-9">
								<input type="number" name="alturaFim" class="form-control" maxlength="2"
									   title="Por favor informe o Altura Final." required />
						</div>
					</div>
				</div>
				<footer class="panel-footer">
					<div class="row">
						<div class="col-md-9 col-md-offset-3">
							<a href="@Url.Action("Index", "Modalidade")" class="btn btn-dark pull-right" style="margin-left: 5px;margin-right: 5px;"><i class="fa fa-reply"></i> &nbsp;&nbsp;Voltar</a>
							<button type="reset" class="btn btn-danger pull-right" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
							<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
						</div>
					</div>
				</footer>
			</section>
		}
	</div>
</div>
</div>
@section Scripts {
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
	<script src="~/assets/vendor/jquery-mask/jquery.mask.js"></script>
	<script src="~/js/Modalidade.js"></script>
	<script>

		(function ($) {

			'use strict';
			var crud = @ViewBag.CrudMessage;

			if (crud === 1) {
				new PNotify({
					title: 'Modalidade',
					text: 'Cadastro realizado com sucesso!',
					type: 'success'
				});
			} else if (crud === 2) {
				new PNotify({
					title: 'Modalidade',
					text: 'Dados alterados com sucesso.',
					type: 'warning'
				});
			} else if (crud === 3) {
				new PNotify({
					title: 'Modalidade',
					text: 'Registro excluído com sucesso.',
					type: 'error'
				});
			}

			var notify = @ViewBag.NotifyMessage;
			var messagem = '@ViewBag.Notify';

			if (notify === 0) {
				new PNotify({
					title: 'Modalidade',
					text: messagem,
					type: 'success'
				});
			} else if (notify === 1) {
				new PNotify({
					title: 'Modalidade',
					text: messagem,
					type: 'warning'
				});
			} else if (notify === 2) {
				new PNotify({
					title: 'Modalidade',
					text: messagem,
					type: 'error'
				});
			}

		}).apply(this, [jQuery]);

	</script>
}