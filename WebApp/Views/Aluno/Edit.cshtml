@model AlunoModel

@{
    ViewData["Title"] = "Novo Aluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" name="EditAlunoId" value="@Model.Aluno.Id" />
<div class="row">
    <div class="col-md-12">
        <div class="tabs">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#dados" data-toggle="tab">Dados</a>
                </li>
                <li>
                    <a href="#dependencias" data-toggle="tab">Dependências</a>
                </li>
                <li>
                    <a href="#matriculas" data-toggle="tab">Matrículas</a>
                </li>
                <li>
                    <a href="#modalidades" data-toggle="tab">Modalidades</a>
                </li>
                @* <li>
                <a href="#vouchers" data-toggle="tab">Vouchers</a>
                </li> *@
            </ul>
            <div class="tab-content">
                <div id="dados" class="tab-pane active">
                    <div class="row">
                        <div class="col-md-12">
                            @using (@Html.BeginForm("Edit", "Aluno", FormMethod.Post, new { id = "formDadosAluno", @class = "form-horizontal", @enctype = "multipart/form-data" }))
                            {
                                <section class="panel">
                                    <div class="panel-body">
                                       @*  @{
                                            var base64 = Convert.ToBase64String(Model.Aluno.ByteImage!);
                                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                        } *@
                                        <div class="form-group">
                                        </div>

                                        <div class="form-group">
                                            @* <div class="col-sm-3">
                                                <img src="@imgSrc" style="width: 85%;margin-left: 15px;" /> style="margin-top: 16%;"
                                            </div> *@
                                            <label class="col-sm-1 control-label">Foto</label>
                                            <div class="col-sm-4">
                                                <div class="fileupload fileupload-new" data-provides="fileupload">
                                                    <div class="input-append">
                                                        <div class="uneditable-input">
                                                            <i class="fa fa-file fileupload-exists"></i>
                                                            <span class="fileupload-preview"></span>
                                                        </div>
                                                        <span class="btn btn-default btn-file">
                                                            <span class="fileupload-exists">Alterar</span>
                                                            <span class="fileupload-new">Selecionar Arquivo</span>
                                                            <input type="file" id="arquivo" name="arquivo" />
                                                        </span>
                                                        <a href="#" class="btn btn-default fileupload-exists" data-dismiss="fileupload">Remover</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <label class="col-sm-1 control-label">CPF </label>
                                            <div class="col-sm-3">
                                                <input id="cpf" name="cpf"
                                                       v-model="params.cpf" value="@Model.Aluno.Cpf"
                                                       type="text" value="" class="form-control"
                                                       maxlength="14" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-1 control-label">Nome <span class="required">*</span></label>
                                            <div class="col-sm-5">
                                                <input type="text" name="nome" id="nome" maxlength="200" class="form-control" required title="Por favor informe um nome." value="@Model.Aluno.Nome" />
                                            </div>
                                            <label class="col-sm-1 control-label">Email <span class="required">*</span></label>
                                            <div class="col-sm-5">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-envelope"></i>
                                                    </span>
                                                    <input type="text" name="email" maxlength="100" class="form-control" value="@Model.Aluno.Email" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-1 control-label">Etnia <span class="required">*</span></label>
                                            <div class="col-sm-2">
                                                <select class="form-control populate select2" name="ddlEtnia" id="ddlEtnia" style="width:100%"
                                                        title="Por favor selecione um etnia."
                                                        asp-for="EtniaId" asp-items="Model.ListEtnias">
                                                    <option value="">Selecionar Etnia</option>
                                                </select>
                                            </div>
                                            <label class="col-sm-1 control-label">Sexo <span class="required">*</span></label>
                                            <div class="col-sm-2">
                                                <select class="form-control populate select2" name="ddlSexo" id="ddlSexo"
                                                        title="Por favor selecione um sexo." required>
                                                    <option value="">Selecionar Sexo</option>
                                                    <option value="M">MASCULINO</option>
                                                    <option value="F">FEMININO</option>
                                                </select>
                                            </div>
                                            <label class="col-sm-2 control-label">Data Nascimento <span class="required">*</span></label>
                                            <div class="col-sm-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                    <input id="DtNascimento" name="DtNascimento"
                                                           required
                                                           title="Por favor informe a data de nascimento."
                                                           style="z-index: auto;" value="@Model.Aluno.DtNascimento"
                                                           data-plugin-datepicker data-date-format="dd/mm/yyyy" data-plugin-options='{"language": "pt-BR"}'
                                                           placeholder="__/__/____" class="form-control startdate"
                                                           class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-1 control-label text-sm-right pt-2">Estado <span class="required">*</span></label>
                                            <div class="col-md-2">
                                                <select class="form-control populate select2" name="ddlEstado" id="ddlEstado"
                                                        title="Por favor informe um Estado." required
                                                        asp-for="EstadoId" asp-items="Model.ListEstados">
                                                    <option value="">Selecionar Estado</option>
                                                </select>
                                            </div>
                                            <label class="col-sm-1 control-label text-sm-right pt-2">Município <span class="required">*</span></label>
                                            <div class="col-md-3">
                                                <select class="form-control populate select2" name="ddlMunicipio" id="ddlMunicipio"
                                                        title="Por favor informe um Municipio." required
                                                        asp-for="MunicipioId" asp-items="Model.ListMunicipios">
                                                    <option value="">Selecionar Município</option>
                                                </select>
                                            </div>
                                            <label class="col-sm-2 control-label text-sm-right pt-2">Localidade <span class="required">*</span></label>
                                            <div class="col-md-3">
                                                <select class="form-control populate select2" name="ddlLocalidade" id="ddlLocalidade"
                                                        title="Por favor informe o localidade." required
                                                        asp-for="LocalidadeId" asp-items="Model.ListLocalidades">
                                                    <option value="">Selecionar Localidade</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-1 control-label text-sm-right pt-2">Profissional <span class="required">*</span></label>
                                            <div class="col-md-4">
                                                <select class="form-control populate select2" name="ddlProfissionalAluno" id="ddlProfissionalAluno"
                                                        title="Por favor informe o profissional." required
                                                        asp-for="ProfissionalId" asp-items="Model.ListProfissionais">
                                                    <option value="">Selecionar Profissional</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-1 control-label">Nome Mãe</label>
                                            <div class="col-sm-5">
                                                <input type="text" name="nomeMae" maxlength="150" class="form-control" value="@Model.Aluno.NomeMae" />
                                            </div>
                                            <label class="col-sm-1 control-label">Nome Pai</label>
                                            <div class="col-sm-5">
                                                <input type="text" name="nomePai" maxlength="150" class="form-control" value="@Model.Aluno.NomePai" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-1 control-label">Endereço</label>
                                            <div class="col-sm-6">
                                                <input type="text" id="endereco" name="endereco" maxlength="200" class="form-control" value="@Model.Aluno.Endereco" />
                                            </div>
                                            <label class="col-sm-1 control-label">Número</label>
                                            <div class="col-sm-1">
                                                <input type="number" id="numero" name="numero" maxlength="4" class="form-control" value="@Model.Aluno.Numero" />
                                            </div>
                                            <label class="col-sm-1 control-label">Cep</label>
                                            <div class="col-sm-2">
                                                <input type="text" id="cep" name="cep" maxlength="9" class="form-control" value="@Model.Aluno.Cep" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-1 control-label">Bairro </label>
                                            <div class="col-sm-3">
                                                <input type="bairro" name="bairro" maxlength="50" class="form-control" value="@Model.Aluno.Bairro" />
                                            </div>
                                            <label class="col-lg-1 control-label text-lg-right pt-2">Telefone</label>
                                            <div class="col-lg-3">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-phone"></i>
                                                    </span>
                                                    <input id="numTelefone" name="numTelefone" class="form-control" value="@Model.Aluno.Telefone"
                                                           maxlength="14">
                                                </div>
                                            </div>
                                            <label class="col-sm-1 control-label">Celular </label>
                                            <div class="col-sm-3">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-phone"></i>
                                                    </span>
                                                    <input id="numCelular" name="numCelular" class="form-control" value="@Model.Aluno.Celular"
                                                           maxlength="14">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label pull-left">Cadastro ativo para login?</label>
                                            <div class="col-sm-1">
                                                <div class="switch switch-sm switch-success">
                                                    <input type="checkbox" id="status" name="status" data-plugin-ios-switch @(Model.Aluno.Status == true ? "checked" : "") />
                                                </div>
                                            </div>
                                            <label class="col-sm-3 control-label">Cadastro habilitado a operar?</label>
                                            <div class="col-sm-1">
                                                <div class="switch switch-sm switch-success">
                                                    <input type="checkbox" id="habilitado" name="habilitado" data-plugin-ios-switch @(Model.Aluno.Habilitado == true ? "checked" : "") />
                                                </div>
                                            </div>
                                        </div>
                                        <blockquote class="danger">
                                            <p>Deficiências</p>
                                            <small>Caso possuir alguma deficiências todos os campos devem ser obrigatórios </small>
                                        </blockquote>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Possui deficiência?</label>
                                            <div class="col-sm-10">
                                                <div class="radio-custom radio-success">
                                                    <input type="radio" id="rdbDeficienciaSim" name="rdbDeficiencia" v-on:click="OnClickPossuiDeficiencia(true)" value="true">
                                                    <label for="rdbDeficienciaSim">Sim</label>
                                                </div>

                                                <div class="radio-custom radio-danger">
                                                    <input type="radio" id="rdbDeficienciaNao" name="rdbDeficiencia" v-on:click="OnClickPossuiDeficiencia(false)" value="false" checked>
                                                    <label for="rdbDeficienciaNao">Não</label>
                                                </div>

                                            </div>
                                        </div>
                                        <div id="divDeficiencia" name="divDeficiencia" v-show="params.possuiDeficiencia">
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">Deficiência</label>
                                                <div class="col-sm-4">
                                                    <select class="form-control populate select2" name="ddlDeficiencia" id="ddlDeficiencia"
                                                            style="width: 100%" title="Por favor selecione o turno."
                                                            asp-for="DeficienciaId" asp-items="Model.ListDeficiencias">
                                                        <option value="0">Selecionar Deficiência</option>
                                                    </select>
                                                </div>
                                                <div class="col-sm-1">
                                                    <a type="button" class="ml-xs btn btn-success" href='javascript:(crud.AddDeficiencia())'>
                                                        <i class="fa fa-plus"></i>
                                                    </a>
                                                </div>
                                                <div class="col-sm-5 pull-right">
                                                    <a data-toggle="modal" data-target="#mdDeficiencia" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Nova Deficiência </a>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <input type="hidden" name="arrDeficiencias" />
                                                <label class="col-sm-2 control-label">Adicionados</label>
                                                <div class="col-sm-10">
                                                    <table class="adicionados table table-bordered table-striped mb-0" id="deficienciaDataTable">
                                                        <thead>
                                                            <tr>
                                                                <th>Id</th>
                                                                <th>Nome Deficiência</th>
                                                                <th>Ação</th>
                                                            </tr>
                                                        </thead>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <footer class="panel-footer">
                                        <div class="row">
                                            <div class="col-md-9 col-md-offset-3">
                                                <a href="@Url.Action("Index", "Aluno")" class="btn btn-dark pull-right" style="margin-left: 5px;margin-right: 5px;"><i class="fa fa-reply"></i> &nbsp;&nbsp;Voltar</a>
                                                <button type="submit" class="btn btn-danger pull-right" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
                                                <button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>

                                            </div>
                                        </div>
                                    </footer>
                                </section>
                            }
                        </div>
                    </div>
                </div>
                <div id="dependencias" class="tab-pane">
                    <div class="row">
                        <div class="col-md-12">
                            @using (@Html.BeginForm("EditDependencia", "Aluno", FormMethod.Post, new { id = "formDependenciaAluno", @class = "form-horizontal" }))
                            {
                                <section class="panel">
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <div class="col-sm-9">
                                                <div class="radio-custom radio-success">
                                                    <input type="radio" id="rdbAutorizacaoSim" name="rdbAutorizacao" value="true">
                                                    <label for="rdbAutorizacaoSim">
                                                        1
                                                        Autorizo o mesmo a se ausentar das dependências do
                                                        Centro Olímpico e Paralímpico sem a presença de um responsável após o
                                                        término de suas atividades.
                                                    </label>
                                                </div>

                                                <div class="radio-custom radio-danger">
                                                    <input type="radio" id="rdbAutorizacaoNao" name="rdbAutorizacao" value="false">
                                                    <label for="rdbAutorizacaoNao">
                                                        Não autorizo o mesmo a se ausentar das dependências do
                                                        Centro Olímpico e Paralímpico sem a presença de um responsável após o término
                                                        de suas atividades.
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-1 control-label">Doenças</label>
                                            <div class="col-sm-11">
                                                <textarea class="form-control" rows="3"
                                                          id="Doenca" name="Doenca" value="@if (Model.Dependecia != null) {
                                            @Model.Dependecia.Doencas
 }"
                                                          data-plugin-maxlength maxlength="400"></textarea>
                                                <p>
                                                    <code>limite</code> 400.
                                                </p>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-1 control-label">Nacionalidade</label>
                                            <div class="col-sm-5">

                                                <input type="text" id="nacionalidade" name="nacionalidade" class="form-control"
                                                       value="@if (Model.Dependecia != null) {
                                            @Model.Dependecia.Nacionalidade
 }" />
                                            </div>
                                            <label class="col-sm-1 control-label">Naturalidade</label>
                                            <div class="col-sm-5">

                                                <input type="text" id="naturalidade" name="naturalidade" class="form-control" value="@if (Model.Dependecia != null) {
                                            @Model.Dependecia.Naturalidade
 }" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <blockquote class="info">
                                                <strong>Dados de Escola/Escolaridade</strong>
                                            </blockquote>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Nome Escola</label>
                                            <div class="col-sm-4">
                                                <input type="text" id="escola" name="escola" class="form-control" value="@if (Model.Dependecia != null) {
                                            @Model.Dependecia.NomeEscola
 }" />
                                            </div>

                                            <label class="col-sm-2 control-label">Tipo Escola</label>
                                            <div class="col-sm-4">
                                                <select class="form-control populate select2" name="ddlTipoEscola" id="ddlTipoEscola"
                                                        style="width: 100%" title="Por favor selecione o tipo da escola.">
                                                    <option value="">Selecionar Tipo Escola</option>
                                                    <option value="PRIVADA">PRIVADA</option>
                                                    <option value="PÚBLICA">PÚBLICA</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Tipo Escolaridade</label>
                                            <div class="col-sm-4">
                                                <select class="form-control populate select2" name="ddlTipoEscolaridade" id="ddlTipoEscolaridade"
                                                        style="width: 100%" title="Por favor selecione o tipo escolaridade.">
                                                    <option value="">Selecionar Tipo Escolaridade</option>
                                                    <option value="ENSINO MEDIO">ENSINO MEDIO</option>
                                                    <option value="ENSINO FUNDAMENTAL">ENSINO FUNDAMENTAL</option>
                                                    <option value="EJA">EJA</option>
                                                </select>
                                            </div>
                                            <label class="col-sm-2 control-label">Turno</label>
                                            <div class="col-sm-3">
                                                <select class="form-control populate select2" name="ddlTurno" id="ddlTurno"
                                                        style="width: 100%" title="Por favor selecione o turno.">
                                                    <option value="">Selecionar Turno</option>
                                                    <option value="1">MATUTINO</option>
                                                    <option value="2">VESPERTINO</option>
                                                    <option value="3">NOTURNO</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Série</label>
                                            <div class="col-sm-3">
                                                <input type="text" id="serie" name="serie" class="form-control" value="@if (Model.Dependecia != null)
                                                {
                                            @Model.Dependecia.Serie
}" />
                                            </div>
                                            <label class="col-sm-1 control-label">Ano </label>
                                            <div class="col-sm-2">
                                                <input type="text" id="ano" name="ano" class="form-control" value="@if (Model.Dependecia !=null) {
                                            @Model.Dependecia.Ano
}" />
                                            </div>
                                            <label class="col-sm-1 control-label">Turma</label>
                                            <div class="col-sm-3">
                                                <input type="text" id="turma" name="turma" class="form-control" value="@if (Model.Dependecia !=null) {
                                            @Model.Dependecia.Turma
}" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Termo de compromisso</label>
                                            <div class="col-sm-1">
                                                <div class="radio-custom radio-primary">
                                                    <input id="termoSim" name="rdbTermo" type="radio" value="true" />
                                                    <label for="termoSim">Sim</label>
                                                </div>
                                                <div class="radio-custom radio-primary">
                                                    <input id="termoNao" name="rdbTermo" type="radio" value="false"
                                                    @if (Model.Dependecia != null)
                                                    {
                                                        @(Model.Dependecia.TermoCompromisso == true ? "checked" : "")
                                                    } />
                                                    <label for="termoNao">Não</label>
                                                </div>
                                                <label class="error" for="porto_is"></label>
                                            </div>

                                            <label class="col-sm-3 control-label">Autorização de uso de imagem e áudio</label>
                                            <div class="col-sm-1">
                                                <div class="radio-custom radio-primary">
                                                    <input id="rdbautorizacaoimagemSim" name="rdbautorizacaoimagem" type="radio" value="true"
                                                    @if (Model.Dependecia != null)
                                                    {
                                                        @(Model.Dependecia.AutorizacaoUsoImagemAudio == true ? "checked" : "")
                                                    } />
                                                    <label for="rdbautorizacaoimagemSim">Sim</label>
                                                </div>
                                                <div class="radio-custom radio-primary">
                                                    <input id="rdbautorizacaoimagemNao" name="rdbautorizacaoimagem" type="radio" value="false"
                                                    @if (Model.Dependecia != null)
                                                    {
                                                        @(Model.Dependecia.AutorizacaoUsoImagemAudio == true ? "checked" : "")
                                                    } />
                                                    <label for="rdbautorizacaoimagemNao">Não</label>
                                                </div>
                                                <label class="error" for="porto_is"></label>
                                            </div>

                                            <label class="col-sm-4 control-label">Autorização de captação e uso de indicadores de desenvolvimento e saúde</label>
                                            <div class="col-sm-1">
                                                <div class="radio-custom radio-primary">
                                                    <input id="rdbautorizacaoindicadoresSim" name="rdbautorizacaoindicadores" type="radio" value="true"
                                                    @if (Model.Dependecia != null)
                                                    {
                                                        @(Model.Dependecia.AutorizacaoUsoIndicadores == true ? "checked" : "")
                                                    } />
                                                    <label for="rdbautorizacaoindicadoresSim">Sim</label>
                                                </div>
                                                <div class="radio-custom radio-primary">
                                                    <input id="rdbautorizacaoindicadoresNao" name="rdbautorizacaoindicadores" type="radio" value="false"
                                                    @if (Model.Dependecia != null)
                                                    {
                                                        @(Model.Dependecia.AutorizacaoUsoIndicadores == true ? "checked" : "")
                                                    } />
                                                    <label for="rdbautorizacaoindicadoresNao">Não</label>
                                                </div>
                                                <label class="error" for="porto_is"></label>
                                            </div>
                                        </div>
                                    </div>
                                    <footer class="panel-footer">
                                        <div class="row">
                                            <div class="col-md-9 col-md-offset-3">
                                                <button type="submit" class="btn btn-danger pull-right" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
                                                <button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>

                                            </div>
                                        </div>
                                    </footer>
                                </section>
                            }
                        </div>
                    </div>
                </div>
                <div id="matriculas" class="tab-pane">
                    <div class="row">
                        <div class="col-md-12">
                            @using (@Html.BeginForm("EditMatricula", "Aluno", FormMethod.Post, new { id = "formMatriculaAluno", @class = "form-horizontal" }))
                            {
                                <section class="panel">
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Localidade</label>
                                            <div class="col-sm-4">
