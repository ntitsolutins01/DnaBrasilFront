@model AlunoModel

@{
    ViewData["Title"] = "Alunos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <form id="formAluno" action="forms-validation.html" class="form-horizontal">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                    </div>

                    <h2 class="panel-title">Filtro de pesquisa</h2>
                </header>
                <div class="panel-body">

                    <label class="col-sm-1 control-label">Aluno</label>
                    <div class="col-md-3 form-group">
                        <input type="text" name="aluno" class="form-control" placeholder="eg.: Descrição completa do nome do aluno"
                               maxlength="60" />
                    </div>

                    <label class="col-sm-1 control-label" style="width: 12.499999995%">CPF</label>
                    <div class="col-md-3 form-group">
                        <input id="cpf" name="cpf" type="text" value="" class="form-control" 
                               placeholder="eg.: Número do CPF do aluno" maxlength="14" />
                    </div>

                    <label class="col-sm-1 control-label">Deficiência </label>
                    <div class="col-md-3 form-group">
                        <select class="form-control populate select2" name="ddlDeficiencia" id="ddlDeficiencia"
                                title="Por favor selecione uma deficiencia." required
                        asp-for="DeficienciaId" asp-items="Model.ListDeficiencias">
                            <option value="">Selecionar Local</option>
                        </select>
                    </div>

                    <label class="col-sm-1 control-label">Localidade</label>
                    <div class="col-md-3 form-group">
                        <select class="form-control populate select2" name="ddlLocalidade" id="ddlLocalidade"
                                title="localidadeSelect" required
                                asp-for="LocalidadeId" asp-items="Model.ListLocalidades">
                            <option value="">Selecionar Localidade</option>
                        </select>
                    </div>

                    <label class="col-sm-3 control-label">Cadastros ativos</label>
                    <div class="col-md-3 form-group">
                        <div class="switch switch-sm switch-primary">
                            <input type="checkbox" id="AlunoIncluir" name="AlunoIncluir" data-plugin-ios-switch checked="checked" />
                        </div>
                    </div>

                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-md-9 col-md-offset-3">
                            <button type="submit" class="btn btn-primary pull-right" style="margin-left: 5px;margin-right: 5px;"><i class="fa fa-search"></i> &nbsp;&nbsp;Pesquisar</button>
                        </div>
                    </div>
                </footer>
            </section>
        </form>
    </div>
</div>

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
        </div>

        <h2 class="panel-title">Listagem de Alunos</h2>

    </header>
    <div class="panel-body">
        <div class="form-group row">
            <div class="col-sm-2 pull-right">
                <a href="@Url.Action("Create", "Aluno")" id="addToTable" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Novo Aluno </a>
            </div>
        </div>
        <table class="table table-bordered table-striped mb-0" id="datatable-default">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Email</th>
                    @* <th>Pesquisas</th>
                    <th>Laudos</th> *@
                    <th>Data de Nascimento</th>
                    <th>Status</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Alunos)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.DtNascimento)</td>
                        @if (item.Status)
                        {
                            <td class="text-center"><span class="label label-success">ATIVO</span></td>
                        }
                        else
                        {
                            <td class="text-center"><span class="label label-danger">INATIVO</span></td>
                        }
                        <td class="actions">
                            <a data-toggle="tooltip" data-placement="top" title="Novo Laudo" asp-action="Laudo" asp-controller="Aluno" asp-route-id="@item.Id" class="on-default remove-row" style='color:#4CAF50'><i class="fa fa-file-text"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>



@section CssSpecificVendor {
    <link rel="stylesheet" href="~/assets/vendor/select2/css/select2.css" />
    <link rel="stylesheet" href="~/assets/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/vendor/datatables/media/css/dataTables.bootstrap4.css" />
    }
@section Scripts {
	<script src="~/assets/vendor/select2/js/select2.js"></script>
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/assets/vendor/ios7-switch/ios7-switch.js"></script>
    <script src="~/assets/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/formatTable.js"></script>
    <script src="~/js/alunos.js"></script>

    <script>
        
        (function ($) {

            'use strict';
            var crub = @ViewBag.CrudMessage;

            if (crub === 1) {
                new PNotify({
                    title: 'Aluno',
                    text: 'Cadastro realizado com sucesso!',
                    type: 'success'
                });
            } else if (crub === 2) {
                new PNotify({
                    title: 'Aluno',
                    text: 'Dados alterados com sucesso.',
                    type: 'warning',
                    icon: 'fa fa-pencil'
                });
            } else if (crub === 3) {
                new PNotify({
                    title: 'Aluno',
                    text: 'Registro excluído com sucesso.',
                    type: 'error',
                    icon: 'fa fa-trash-o'
                });
            }
            if ($.isFunction($.fn['tooltip'])) {
                $('[data-toggle=tooltip],[rel=tooltip]').tooltip({ container: 'body' });
            }

        }).apply(this, [jQuery]);
    </script>
}

