@{
	ViewData["Title"] = "Inclusão de Plano aula";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-md-12">
		@using (@Html.BeginForm("Create", "Planoaula", FormMethod.Post, new { id = "formPlanoAula", @class = "form-horizontal" }))
		{
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
					</div>
					<h2 class="panel-title">Cadastro de Plano aula</h2>
				</header>
				<div class="panel-body">
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Plano Aula<span class="required">*</span></label>
						<div class="col-sm-9">
							<select class="form-control populate select2" name="ddlPlanoAula" id="ddlPlanoAula"
									style="width: 100%" title="Por favor selecione o plano aula.">
								<option value="">Selecionar o Plano de Aula</option>
								<option value="MATEMATICA">MATEMATICA</option>
								<option value="EDUCAÇÃO FISICA">EDUCAÇÃO FISICA</option>
								<option value="PORTUGUES">PORTUGUES</option>
								<option value="CIENCIAS NATURAIS">CIENCIAS NATURAIS</option>
								<option value="TEMAS TRANSVERSAIS">TEMAS TRANSVERSAIS</option>
							</select>
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Tipo Escolaridade <span class="required">*</span></label>
						<div class="col-sm-3">
							<select class="form-control populate select2" name="ddlTipoEscolaridade" id="ddlTipoEscolaridade"
									style="width: 100%" title="Por favor selecione o tipo escolaridade.">
								<option value="">Selecionar Tipo Escolaridade</option>
								<option value="ENSINO MEDIO">ENSINO MEDIO</option>
								<option value="ENSINO FUNDAMENTAL">ENSINO FUNDAMENTAL</option>
								<option value="EJA">EJA</option>
							</select>
						</div>
						<label class="col-sm-3 control-label text-sm-right pt-2">Modaliodade <span class="required">*</span></label>
						<div class="col-sm-3">
							<input type="text" name="modalidade" id="modalidade" class="form-control"
							       maxlength="50" style="text-transform:uppercase"
							       title="Por favor informe a modalidade." required />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Arquivo</label>
						<div class="col-sm-9">
							<div class="fileupload fileupload-new" data-provides="fileupload">
								<div class="input-append">
									<div class="uneditable-input">
										<i class="fa fa-file fileupload-exists"></i>
										<span class="fileupload-preview"></span>
									</div>
									<span class="btn btn-default btn-file">
										<span class="fileupload-exists">Alterar</span>
										<span class="fileupload-new">Selecionar Arquivo</span>
										<input type="file" />
									</span>
									<a href="#" class="btn btn-default fileupload-exists" data-dismiss="fileupload">Remover</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				<footer class="panel-footer">
					<div class="row">
						<div class="col-md-9 col-md-offset-3">
							<a href="@Url.Action("Index", "Planoaula")" class="btn btn-dark pull-right" style="margin-left: 5px;margin-right: 5px;"><i class="fa fa-reply"></i> &nbsp;&nbsp;Voltar</a>
							<button type="reset" class="btn btn-danger pull-right" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
							<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
						</div>
					</div>
				</footer>
			</section>
		}
	</div>
</div>
@section CssSpecificVendor {
	<link rel="stylesheet" href="~/assets/vendor/select2/css/select2.css" />
	<link rel="stylesheet" href="~/assets/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
	<link rel="stylesheet" href="~/assets/vendor/datatables/media/css/dataTables.bootstrap4.css" />
}
@section Scripts {
	<script src="~/assets/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
	<script src="~/assets/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
	<script src="~/assets/vendor/select2/js/select2.js"></script>
	<script src="~/js/formatTable.js"></script>
	<script src="~/js/Planoaula.js"></script>
		

			(function ($) {

				'use strict';
				var crud = @ViewBag.CrudMessage;

				if (crud === 1) {
					new PNotify({
						title: 'Plano aula',
						text: 'Cadastro realizado com sucesso!',
						type: 'success'
					});
				} else if (crud === 2) {
					new PNotify({
						title: 'Plano aula',
						text: 'Dados alterados com sucesso.',
						type: 'warning'
					});
				} else if (crud === 3) {
					new PNotify({
						title: 'Plano aula',
						text: 'Registro excluído com sucesso.',
						type: 'error'
					});
				}

				var notify = @ViewBag.NotifyMessage;
				var messagem = '@ViewBag.Notify';

				if (notify === 0) {
					new PNotify({
						title: 'Plano aula',
						text: messagem,
						type: 'success'
					});
				} else if (notify === 1) {
					new PNotify({
						title: 'Plano aula',
						text: messagem,
						type: 'warning'
					});
				} else if (notify === 2) {
					new PNotify({
						title: 'Plano aula',
						text: messagem,
						type: 'error'
					});
				}

			}).apply(this, [jQuery]);

	</script>
}