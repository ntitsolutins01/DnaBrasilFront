@{
	ViewData["Title"] = "Perfil";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
	<div class="col-lg-12">
		<form id="form" class="form-horizontal">
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
					</div>
					<h2 class="panel-title">Listagem de perfil</h2>
				</header>
				<div class="panel-body">
					<div class="form-group row">
						<div class="col-sm-12 pull-right">
							<a href="@Url.Action("Create", "Perfil")" id="addToTable" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Novo Perfil </a>
						</div>
					</div>
					<table class="table table-bordered table-striped mb-0" id="datatable-default">
						<thead>
							<tr>
								<th class="text-center">Nome Perfil</th>
								<th class="text-center">Ações</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>Administrador</td>
								<td class="actions">
									<a data-toggle="tooltip" data-placement="top" title="Editar" @* asp-action="Edit" *@ asp-controller="Perfil" asp-route-id="1" class="on-default edit-row" style='color: #FF9800'><i class="fa fa-pencil"></i></a>
									<a data-toggle="tooltip" data-placement="top" title="Excluir" @* asp-action="Delete" *@ asp-controller="Perfil" asp-route-id="1" class="on-default remove-row" style='color:#F44336'><i class="fa fa-trash-o"></i></a>
								</td>
							</tr>
							@* @foreach (var item in Model.aaData)
							{
							<tr>
							<td>@Html.DisplayFor(modelItem => item.NomPerfil)</td>
							<td class="actions">

							@if (item.NomPerfil.ToUpper() != UserRoles.Administrator.ToUpper() && item.NomPerfil.ToUpper() != UserRoles.UsuarioPublico.ToUpper())
							{
							<a data-toggle="tooltip" data-placement="top" title="Editar" asp-action="Edit" asp-controller="Perfil" asp-route-id="@item.CodPerfil" class="on-default edit-row" style='color: #eea236'><i class="fa fa-pencil"></i></a>

							<a data-toggle="tooltip" data-placement="top" title="Excluir" asp-action="Delete" asp-controller="Perfil" asp-route-id="@item.CodPerfil" class="on-default remove-row" style='color: #d43f3a'><i class="fa fa-trash-o"></i></a>
							}

							</td>
							</tr>
							} *@

						</tbody>
					</table>
				</div>
			</section>
		</form>
	</div>
</div>
<!-- Modal -->
<div class="modal fade" id="mdExcluir" tabindex="-1" role="dialog" aria-labelledby="mdExcluirLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="mdExcluirLabel">
					<i class="fa fa-trash"></i> &nbsp;&nbsp;<strong>Exclusão de Perfil</strong>
				</h5>
			</div>
			<div class="modal-body">
				<div class="modal-icon">
					<i class="fa fa-question-circle"></i>
				</div>
				<div class="modal-text">
					<p class="mb-0">Tem certeza que deseja <b>excluir</b> esse registro?</p>
				</div>
				<div class="modal-wrapper">
				</div>
			</div>
			<div class="modal-footer">
				<button type="submit" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-thumbs-o-down"></i> &nbsp;&nbsp;Não</button>
				<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-thumbs-o-up"></i> &nbsp;&nbsp;Sim</button>
			</div>
		</div>
	</div>
</div>


@section CssSpecificVendor {
	<link rel="stylesheet" href="~/assets/vendor/datatables/media/css/dataTables.bootstrap4.css" />
}
@section Scripts {
	<script src="~/assets/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
	<script src="~/assets/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
	<script src="~/js/formatTable.js"></script>

	<script>
		// Tooltip
		(function ($) {

			'use strict';
			var crub = @ViewBag.CrudMessage;

			if (crub === 1) {
				new PNotify({
					title: 'Perfil',
					text: 'Cadastro realizado com sucesso!',
					type: 'success'
				});
			} else if (crub === 2) {
				new PNotify({
					title: 'Perfil',
					text: 'Dados alterados com sucesso.',
					type: 'warning',
					icon: 'fa fa-pencil'
				});
			} else if (crub === 3) {
				new PNotify({
					title: 'Perfil',
					text: 'Registro excluído com sucesso.',
					type: 'error',
					icon: 'fa fa-trash-o'
				});
			}

			var notify = @ViewBag.NotifyMessage;
			var messagem = '@ViewBag.Notify';

			if (notify === 0) {
				new PNotify({
					title: 'Perfil',
					text: messagem,
					type: 'success'
				});
			} else if (notify === 1) {
				new PNotify({
					title: 'Perfil',
					text: messagem,
					type: 'warning'
				});
			} else if (notify === 2) {
				new PNotify({
					title: 'Perfil',
					text: messagem,
					type: 'error'
				});
			}

			if ($.isFunction($.fn['tooltip'])) {
				$('[data-toggle=tooltip],[rel=tooltip]').tooltip({ container: 'body' });
			}

		}).apply(this, [jQuery]);
	</script>
}