@{
	ViewData["Title"] = "Inclusão de Ambiente";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-md-12">
		@using (@Html.BeginForm("Create", "Modalidade", FormMethod.Post, new { id = "formAmbiente", @class = "form-horizontal" }))
		{
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
					</div>

					<h2 class="panel-title">Cadastro de Ambiente</h2>
				</header>
				<div class="panel-body">

					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Ambiente <span class="required">*</span></label>
						<div class="col-sm-9">
							<input type="text" name="nome" class="form-control"
								   maxlength="80"
								   title="Por favor informe o ambiente." required />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Vo2 Max Ini <span class="required">*</span></label>
						<div class="col-sm-9">
							<input type="number" name="vo2MaxIni" class="form-control" maxlength="2"
								   title="Por favor informe o Vo2 Max Inicial." required />
						</div>
						<label class="col-sm-3 control-label text-sm-right pt-2">Vo2 Max Fim <span class="required">*</span></label>
						<div class="col-sm-9">
                            <input type="number" name="vo2MaxFim" class="form-control" maxlength="2"
								   title="Por favor informe o Vo2 Max Final." required />
						</div>
					</div>
				</div>
				<footer class="panel-footer">
					<div class="row">
						<div class="col-md-9 col-md-offset-3">
							<a href="@Url.Action("Index", "Ambiente")" class="btn btn-dark pull-right" style="margin-left: 5px;margin-right: 5px;"><i class="fa fa-reply"></i> &nbsp;&nbsp;Voltar</a>
							<button type="reset" class="btn btn-danger pull-right" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
							<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
						</div>
					</div>
				</footer>
			</section>
		}
	</div>
</div>

@section Scripts {
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
	<script src="~/assets/vendor/jquery-mask/jquery.mask.js"></script>
	<script src="~/js/ambiente.js"></script>
	<script>

		(function ($) {

			'use strict';
			var crud = @ViewBag.CrudMessage;

			if (crud === 1) {
				new PNotify({
					title: 'Ambiente',
					text: 'Cadastro realizado com sucesso!',
					type: 'success'
				});
			} else if (crud === 2) {
				new PNotify({
					title: 'Ambiente',
					text: 'Dados alterados com sucesso.',
					type: 'warning'
				});
			} else if (crud === 3) {
				new PNotify({
					title: 'Ambiente',
					text: 'Registro excluído com sucesso.',
					type: 'error'
				});
			}

			var notify = @ViewBag.NotifyMessage;
			var messagem = '@ViewBag.Notify';

			if (notify === 0) {
				new PNotify({
					title: 'Ambiente',
					text: messagem,
					type: 'success'
				});
			} else if (notify === 1) {
				new PNotify({
					title: 'Ambiente',
					text: messagem,
					type: 'warning'
				});
			} else if (notify === 2) {
				new PNotify({
					title: 'Ambiente',
					text: messagem,
					type: 'error'
				});
			}

		}).apply(this, [jQuery]);

	</script>
}