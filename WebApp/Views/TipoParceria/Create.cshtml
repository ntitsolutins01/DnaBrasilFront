@{
	ViewData["Title"] = "Inclusão de TipoParceria";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-md-12">
		@using (@Html.BeginForm("Create", "TipoParceria", FormMethod.Post, new { id = "formTipoParceria", @class = "form-horizontal" }))
		{
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                    </div>

                    <h2 class="panel-title">Cadastro de Parceiro</h2>
                </header>
                <div class="panel-body">

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Nome <span class="required">*</span></label>
                        <div class="col-sm-4">
                            <input type="text" id="nome" name="nome" class="form-control" required title="Por favor informe o Nome" />
                        </div>
                        <label class="col-sm-1 control-label">Email <span class="required">*</span></label>
                        <div class="col-sm-5">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-envelope"></i>
                                </span>
                                <input type="text" name="email" id="email" maxlength="100" class="form-control"
                                       title="Por favor informe um email válido do parceiro" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Selecione a Parceria <span class="required">*</span></label>
                        <div class="col-sm-2">
                            <div class="radio-custom radio-danger">
                                <input id="empresas" name="tipoParceria" type="radio" value="1" required title="Por favor selecione a parceiria." />
                                <label for="tipoParceria">Empresas parceiras</label>
                            </div>
                            <div class="radio-custom radio-success">
                                <input id="clubesFederacoes" name="tipoParceria" type="radio" value="2" required title="Por favor selecione a parceiria." />
                                <label for="tipoParceria">Clubes e Federações</label>
                            </div>
                            <label class="error" for="tipoParceria"></label>
                        </div>
                        <label class="col-sm-2 control-label">Tipo Pessoa <span class="required">*</span></label>
                        <div class="col-sm-2">
                            <div class="radio-custom radio-default">
                                <input id="pf" name="tipoPessoa" type="radio" value="pf" checked
                                       required title="Por favor selecione o tipo pessoa." />
                                <label for="tipoPessoa">Pessoa Física</label>
                            </div>
                            <div class="radio-custom radio-info">
                                <input id="pj" name="tipoPessoa" type="radio" value="pj" required title="Por favor selecione o tipo pessoa." />
                                <label for="tipoPessoa">Pessoa Jurídica</label>
                            </div>
                            <label class="error" for="tipoPessoa"></label>
                        </div>
                        <div v-if="params.visible" id="hideCpf">
                            <label class="col-sm-1 control-label">CPF <span class="required">*</span></label>
                            <div class="col-sm-3">
                                <input id="cpf" name="cpf"
                                       type="text" value="" class="form-control"
                                       title="Por favor informe o cpf do parceiro."
                                       maxlength="14" />
                            </div>
                        </div>
                        <div v-if="!params.visible" id="hideCnpj">
                            <label class="col-sm-1 control-label">CNPJ <span class="required">*</span></label>
                            <div class="col-sm-3">
                                <input id="cnpj" name="cnpj"
                                       type="text" value="" class="form-control"
                                       title="Por favor informe o cnpj do parceiro."
                                       maxlength="19" />
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Telefone </label>
                        <div class="col-sm-3">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-phone"></i>
                                </span>
                                <input id="numTelefone" name="numTelefone" class="form-control"
                                       maxlength="14"
                                       title="Por favor informe o telefone ">
                            </div>
                        </div>
                        <label class="col-sm-1 control-label">Celular </label>
                        <div class="col-sm-3">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-phone"></i>
                                </span>
                                <input id="numCelular" name="numCelular" class="form-control"
                                       maxlength="14"
                                       title="Por favor informe o celular">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Endereço</label>
                        <div class="col-sm-6">
                            <input type="text" id="endereco" name="endereco" class="form-control" />
                        </div>
                        <label class="col-sm-1 control-label">Número</label>
                        <div class="col-sm-2">
                            <input type="number" id="numero" name="numero" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Bairro </label>
                        <div class="col-sm-3">
                            <input type="text" id="bairro" name="bairro" class="form-control" />
                        </div>
                        <label class="col-sm-1 control-label">Cep</label>
                        <div class="col-sm-2">
                            <input type="text" id="cep" name="cep" class="form-control" />
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Estado <span class="required">*</span></label>
                        <div class="col-md-3">
                            <select class="form-control populate select2" name="ddlEstado" id="ddlEstado"
                                    title="Por favor informe o estado." required
                                    asp-for="EstadoId" asp-items="Model.ListEstados">
                                <option value="">Selecionar Estado</option>
                            </select>
                        </div>
                        <label class="col-sm-1 control-label">Município <span class="required">*</span></label>
                        <div class="col-md-3">
                            <select class="form-control populate select2" name="ddlMunicipio" id="ddlMunicipio"
                                    title="Por favor informe o município." required
                                    asp-for="MunicipioId" asp-items="Model.ListMunicipios">
                                <option value="">Selecionar Município</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label pull-left">Cadastro ativo?</label>
                        <div class="col-sm-1">
                            <div class="switch switch-sm switch-primary">
                                <input type="checkbox" id="status" name="status" data-plugin-ios-switch checked="checked" />
                            </div>
                        </div>
                        <label class="col-sm-2 control-label">Cadastro habilitado?</label>
                        <div class="col-sm-1">
                            <div class="switch switch-sm switch-primary">
                                <input type="checkbox" id="habilitado" name="habilitado" data-plugin-ios-switch checked="checked" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-1 control-label pull-left">&nbsp;&nbsp;</label>
                        <div class="col-sm-10">
                            <div class="checkbox-custom chekbox-primary">
                                <input id="compromisso" value="compromisso" type="checkbox" name="compromisso" required title="Campo obrigatório" />
                                <label for="compromisso">Me comprometo que todas as informações prestadas são verdadeiras.</label>
                                <label class="error" for="compromisso"></label>
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-md-9 col-md-offset-3">
                            <button type="submit" class="btn btn-dark pull-right" style="margin-left: 5px;margin-right: 5px;"><i class="fa fa-reply"></i> &nbsp;&nbsp;Voltar</button>
                            <button type="submit" class="btn btn-danger pull-right" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
                            <button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
                        </div>
                    </div>
                </footer>
            </section>
		}
	</div>
</div>

@section Scripts {
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
	<script src="~/assets/vendor/jquery-mask/jquery.mask.js"></script>
	<script src="~/js/TipoParceria.js"></script>
	<script>

		(function ($) {

			'use strict';
			var crud = @ViewBag.CrudMessage;

			if (crud === 1) {
				new PNotify({
					title: 'TipoParceria',
					text: 'Cadastro realizado com sucesso!',
					type: 'success'
				});
			} else if (crud === 2) {
				new PNotify({
					title: 'TipoParceria',
					text: 'Dados alterados com sucesso.',
					type: 'warning'
				});
			} else if (crud === 3) {
				new PNotify({
					title: 'TipoParceria',
					text: 'Registro excluído com sucesso.',
					type: 'error'
				});
			}

			var notify = @ViewBag.NotifyMessage;
			var messagem = '@ViewBag.Notify';

			if (notify === 0) {
				new PNotify({
					title: 'TipoParceria',
					text: messagem,
					type: 'success'
				});
			} else if (notify === 1) {
				new PNotify({
					title: 'TipoParceria',
					text: messagem,
					type: 'warning'
				});
			} else if (notify === 2) {
				new PNotify({
					title: 'TipoParceria',
					text: messagem,
					type: 'error'
				});
			}

		}).apply(this, [jQuery]);

	</script>
}