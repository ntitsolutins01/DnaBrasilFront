@model WebApp.Models.EscolaridadeModel
@{
	ViewData["Title"] = "Listagem de Deificiencias";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
	<div class="col-lg-12">
		<form id="form" class="form-horizontal">
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
					</div>
					<h2 class="panel-title">Listagem de Escolaridades</h2>
				</header>
				<div class="panel-body">
					<div class="form-group row">
						<div class="col-sm-12 pull-right">
							<a href="@Url.Action("Create", "Escolaridade")" id="addToTable" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Novo Tipo de Laudo </a>
						</div>
					</div>
					<table class="table table-bordered table-striped mb-0" id="datatable-default">
						<thead>
							<tr>
								@* <th>Id</th>
								<th>Escolaridade</th>
								<th>Status</th> *@
								<th>Ações</th>
							</tr>
						</thead>
						<tbody>
							@* @foreach (var item in Model.Escolaridades)
							{*@
							<tr>
								@*  <td>@Html.DisplayFor(modelItem => item.Id)</td>
								<td>@Html.DisplayFor(modelItem => item.Nome)</td>
								<td>@Html.DisplayFor(modelItem => item.Status)</td> *@
								<td class="actions">
									<a  title="Editar" type="button" data-toggle="modal" data-target="#mdEdit" style="cursor: pointer; color: #FF9800"><i class="fa fa-pencil"></i></a>
									<a  title="Excluir" type="button" data-toggle="modal" data-target="#mdDelete" style="cursor: pointer; color: #F44336"><i class="fa fa-trash"></i></a>
									@* <a data-toggle="tooltip" data-placement="top" title="Excluir" type="button" data-toggle="modal" data-target="#mdDelete" style="cursor: pointer;color: #F44336"><i class="fa fa-trash"></i></a> *@
								</td>
							</tr>
							@* } *@
						</tbody>
					</table>
				</div>
			</section>
		</form>
	</div>
</div>
<!-- Modal -->
<div class="modal fade" id="mdDelete" tabindex="-1" role="dialog" aria-labelledby="mdDeleteLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="mdDeleteLabel">
					<i class="fa fa-trash"></i> &nbsp;&nbsp;<strong>Exclusão de Escolaridade</strong>
				</h5>
			</div>
			<div class="modal-body">
				<div class="modal-icon">
					<i class="fa fa-question-circle"></i>
				</div>
				<div class="modal-text">
					<p class="mb-0">Tem certeza que deseja <b>excluir</b> esse registro?</p>
				</div>
				<div class="modal-wrapper">
				</div>
			</div>
			<div class="modal-footer">
				<button type="submit" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-thumbs-o-down"></i> &nbsp;&nbsp;Não</button>
				<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-thumbs-o-up"></i> &nbsp;&nbsp;Sim</button>
			</div>
		</div>
	</div>
</div>
<!-- Modal -->
<div class="modal fade" id="mdEdit" tabindex="-1" role="dialog" aria-labelledby="mdEditLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="mdEditLabel">
					<i class="fa fa-pencil"></i> &nbsp;&nbsp;<strong>Alterar Escolaridade</strong>
				</h5>
			</div>
			<div class="modal-body">
			@using (@Html.BeginForm("Edit", "Escolaridade", FormMethod.Post, 
				new { id = "formEditEscolaridade", @class = "form-horizontal" }))
			{
				<div class="form-group row">
					<label class="col-sm-3 control-label text-sm-right pt-2">Escolaridade <span class="required">*</span></label>
					<div class="col-sm-9">
						<input type="text" name="nome" class="form-control"
						       maxlength="50" style="text-transform:uppercase"
						       title="Por favor informe o Escolaridade." required/>
					</div>
				</div>
				<div class="modal-footer">
						<button type="reset" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
					<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
				</div>
			}
			</div>
		</div>
	</div>
</div>
@section CssSpecificVendor {
	<link rel="stylesheet" href="~/assets/vendor/datatables/media/css/dataTables.bootstrap4.css" />
	}
@section Scripts {
	<script src="~/assets/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
	<script src="~/assets/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
	<script src="~/js/formatTable.js"></script>
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
	<script src="~/js/escolaridade.js"></script>
	<script>

		(function ($) {

			'use strict';
			var crub = @ViewBag.CrudMessage;

			if (crub === 1) {
				new PNotify({
					title: 'Escolaridade',
					text: 'Cadastro realizado com sucesso!',
					type: 'success'
				});
			} else if (crub === 2) {
				new PNotify({
					title: 'Escolaridade',
					text: 'Dados alterados com sucesso.',
					type: 'warning',
					icon: 'fa fa-pencil'
				});
			} else if (crub === 3) {
				new PNotify({
					title: 'Escolaridade',
					text: 'Registro excluído com sucesso.',
					type: 'error',
					icon: 'fa fa-trash-o'
				});
			}
			if ($.isFunction($.fn['tooltip'])) {
				$('[data-toggle=tooltip],[rel=tooltip]').tooltip({ container: 'body' });
			}

		}).apply(this, [jQuery]);
	</script>
	}



