@model MetricaImcModel
@{
	ViewData["Title"] = "Inclusão de MetricaImc";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="vMetricaImc">
	<div class="row">
		<div class="col-md-12">
			@using (@Html.BeginForm("Create", "MetricaImc", FormMethod.Post, new { id = "formMetricaImc", @class = "form-horizontal" }))

			{
				<section class="panel">
					<header class="panel-heading">
						<div class="panel-actions">
							<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
						</div>

						<h2 class="panel-title">Cadastro de MetricaImc</h2>
					</header>
					<div class="panel-body">

						<label class="col-sm-1 control-label">Sexo</label>
						<div class="col-sm-3">
							<select class="form-control populate select2" name="ddlSexo" id="ddlSexo"
									title="Por favor selecione um sexo.">
								<option value="">Selecionar Sexo</option>
								<option value="M">MASCULINO</option>
								<option value="F">FEMININO</option>
							</select>
						</div>
						<label class="col-sm-1 control-label text-sm-right pt-2">Idade <span class="required">*</span></label>
						<div class="col-sm-3">
							<input type="text" name="idade " class="form-control" maxlength="100"
								   title="Por favor informe o idade." required />
						</div>
						<div class="form-group row">
							<label class="col-sm-3 control-label text-sm-right pt-2">Classificação <span class="required">*</span></label>
							<div class="col-sm-4">
								<input type="text" name="classificacao" class="form-control"
									   maxlength="100"
									   title="Por favor informe a classificação." required />
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-3 control-label text-sm-right pt-2">Valor Inicial <span class="required">*</span></label>
							<div class="col-sm-3">
								<input type="number" name="valorInicial" class="form-control" maxlength="3"
									   title="Por favor informe o valor inicial." required />
							</div>
							<label class="col-sm-2 control-label text-sm-right pt-2">Valor Final <span class="required">*</span></label>
							<div class="col-sm-3">
								<input type="number" name="valorFinal" class="form-control" maxlength="3"
									   title="Por favor informe o valor final." required />
							</div>
						</div>
					</div>
					<footer class="panel-footer">
						<div class="row">
							<div class="col-md-9 col-md-offset-3">
								<a href="@Url.Action("Index", "MetricaImc")" class="btn btn-dark pull-right" style="margin-left: 5px;margin-right: 5px;"><i class="fa fa-reply"></i> &nbsp;&nbsp;Voltar</a>
								<button type="reset" class="btn btn-danger pull-right" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
								<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
							</div>
						</div>
					</footer>
				</section>
			}
		</div>
	</div>
</div>
@section CssSpecificVendor {
	<link rel="stylesheet" href="~/assets/vendor/select2/css/select2.css" />
	<link rel="stylesheet" href="~/assets/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
}
@section Scripts {
	<script src="~/assets/vendor/select2/js/select2.js"></script>
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
	<script src="~/assets/vendor/jquery-mask/jquery.mask.js"></script>
	<script src="~/js/MetricaImc.js"></script>
	<script>

		(function ($) {

			'use strict';
			var crud = @ViewBag.CrudMessage;

			if (crud === 1) {
				new PNotify({
					title: 'MetricaImc',
					text: 'Cadastro realizado com sucesso!',
					type: 'success'
				});
			} else if (crud === 2) {
				new PNotify({
					title: 'MetricaImc',
					text: 'Dados alterados com sucesso.',
					type: 'warning'
				});
			} else if (crud === 3) {
				new PNotify({
					title: 'MetricaImc',
					text: 'Registro excluído com sucesso.',
					type: 'error'
				});
			}

			var notify = @ViewBag.NotifyMessage;
			var messagem = '@ViewBag.Notify';

			if (notify === 0) {
				new PNotify({
					title: 'MetricaImc',
					text: messagem,
					type: 'success'
				});
			} else if (notify === 1) {
				new PNotify({
					title: 'MetricaImc',
					text: messagem,
					type: 'warning'
				});
			} else if (notify === 2) {
				new PNotify({
					title: 'MetricaImc',
					text: messagem,
					type: 'error'
				});
			}

		}).apply(this, [jQuery]);

	</script>
}