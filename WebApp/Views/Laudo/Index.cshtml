                    </div>
                    <h2 class="panel-title">Listagem de Laudos</h2>
                </header>
                <div class="panel-body">
                    <div class="form-group row">
                        <div class="col-sm-12 pull-right">
                            <a href="@Url.Action("Create", "Laudo")" id="addToTable" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Novo Laudo </a>
                        </div>
                    </div>
                    <table class="table table-bordered table-striped mb-0" id="datatable-default">
                        <thead>
                            <tr>
                                <th class="text-center">Nome</th>
                                <th class="text-center">Saúde</th>
                                <th class="text-center">Talento Esportivo</th>
                                <th class="text-center">Consumo Alimentar</th>
                                <th class="text-center">Saude Bucal</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
