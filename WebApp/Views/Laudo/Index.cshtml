			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="mdEditLaudoLabel">
						<i class="fa fa-trash"></i> &nbsp;&nbsp;<strong>Alterar Laudo</strong>
					</h5>
				</div>
				@using (@Html.BeginForm("Edit", "Laudo", FormMethod.Post, new { id = "formEditLaudo", @class = "form-horizontal" }))
				{
					<input type="hidden" name="editLaudoId" :value="editDto.Id" />

                    <div class="modal-body">
