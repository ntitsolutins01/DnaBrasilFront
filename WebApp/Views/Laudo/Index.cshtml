@model LaudoModel
@{
	ViewData["Title"] = "Listagem de Laudos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="formLaudo">
	<div class="row">
		<div class="col-lg-12">
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
					</div>
					<h2 class="panel-title">Listagem de Laudos</h2>
				</header>
				<div class="panel-body">
					<div class="form-group row">
						<div class="col-sm-12 pull-right">
							<a href="@Url.Action("Create", "Laudo")" id="addToTable" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Novo Laudo </a>
						</div>
					</div>
					<table class="table table-bordered table-striped mb-0" id="datatable-default">
						<thead>
							<tr>
								<th class="text-center">Id</th>
								@* <th class="text-center">Estado</th>
								<th class="text-center">Município</th> *@
								<th class="text-center">Escola</th>
								<th class="text-center">Encaminhamento</th>
								<th class="text-center">Estudante</th>
								<th class="text-center">Idade</th>
								<th class="text-center">Sexo</th>
								<th class="text-center">Altura</th>
								<th class="text-center">Peso</th>
								@* <th class="text-center">Laudo</th> *@
								<th class="text-center">Ações</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model.Laudos)
							{
								<tr>
									<td class="text-center">@Html.DisplayFor(modelItem => item.Aluno.Nome)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.Aluno.Nome)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.Aluno.Nome)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.Aluno.Idade)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.Aluno.Sexo)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.TalentoEsportivo.Altura)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.TalentoEsportivo.Peso)</td>
									
									@* <td class="text-center">@Html.DisplayFor(modelItem => item.TalentoEsportivo.)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.ConsumoAlimentar)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.QualidadeDeVidail)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.Indicador)</td> *@
									<td class="actions">
										<a data-toggle="tooltip" data-placement="top" title="Editar"
										   href='javascript:(crud.EditModal(@item.Id))'
										   class="on-default edit-row" style='color: #FF9800'>
											<i class="fa fa-pencil"></i>
										</a>
										<a data-toggle="tooltip" data-placement="top" title="Detalhar" asp-action="Details" asp-controller="Laudo" asp-route-id="1" class="on-default edit-row" style='color: #eea236'><i class="fa fa-address-card"></i></a>
										<a data-toggle="tooltip" data-placement="top" title="Avaliação Completa" asp-action="Details" asp-controller="Laudo" asp-route-id="1" class="on-default edit-row" style='color: #d2322d'><i class="fa fa-bar-chart"></i></a>
										<a data-toggle="tooltip" data-placement="top" title="Relatório" asp-action="Details" asp-controller="Laudo" asp-route-id="1" class="on-default edit-row" style='color: #47a447'><i class="fa fa-file-text"></i></a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</section>
		</div>
	</div>
	<!-- Modal -->
	<div class="modal fade" id="mdDeleteLaudo" tabindex="-1" role="dialog" aria-labelledby="mdDeleteLaudoLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="mdDeleteLaudoLabel">
						<i class="fa fa-trash"></i> &nbsp;&nbsp;<strong>Exclusão de Laudo</strong>
					</h5>
				</div>
				<div class="modal-body">
					<div class="modal-icon">
						<i class="fa fa-question-circle"></i>
					</div>
					<div class="modal-text">
						<input type="hidden" id="deleteLaudoId" />
						<p class="mb-0">Tem certeza que deseja <b>excluir</b> esse registro?</p>
					</div>
					<div class="modal-wrapper">
					</div>
				</div>
				<div class="modal-footer">
					<button type="submit" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-thumbs-o-down"></i> &nbsp;&nbsp;Não</button>
					<a id="deleteLaudoHref" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-thumbs-o-up"></i> &nbsp;&nbsp;Sim</a>
				</div>
			</div>
		</div>
	</div>
	<!-- Modal -->
