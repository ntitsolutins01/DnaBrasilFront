@model LaudoModel
@{
	ViewData["Title"] = "Listagem de Laudos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="formLaudo">
	<div class="row">
		<div class="col-lg-12">
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
					</div>
					<h2 class="panel-title">Listagem de Laudos</h2>
				</header>
				<div class="panel-body">
					<div class="form-group row">
						<div class="col-sm-12 pull-right">
							<a href="@Url.Action("Create", "Laudo")" id="addToTable" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Novo Laudo </a>
						</div>
					</div>
					<table class="table table-bordered table-striped mb-0" id="datatable-default">
						<thead>
							<tr>
								<th class="text-center">Id</th>
								@* <th class="text-center">Estado</th>
								<th class="text-center">Município</th> *@
								<th class="text-center">Escola</th>
								<th class="text-center">Encaminhamento</th>
								<th class="text-center">Estudante</th>
								<th class="text-center">Idade</th>
								<th class="text-center">Sexo</th>
								<th class="text-center">Altura</th>
								<th class="text-center">Peso</th>
								@* <th class="text-center">Laudo</th> *@
								<th class="text-center">Ações</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model.Laudos)
							{
								<tr>
									<td class="text-center">@Html.DisplayFor(modelItem => item.Aluno.Nome)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.Aluno.Nome)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.Aluno.Nome)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.Aluno.Idade)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.Aluno.Sexo)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.TalentoEsportivo.Altura)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.TalentoEsportivo.Peso)</td>
									
									@* <td class="text-center">@Html.DisplayFor(modelItem => item.TalentoEsportivo.)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.ConsumoAlimentar)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.QualidadeDeVidail)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.Indicador)</td> *@
									<td class="actions">
										<a data-toggle="tooltip" data-placement="top" title="Detalhar" asp-action="Details" asp-controller="Laudo" asp-route-id="1" class="on-default edit-row" style='color: #eea236'><i class="fa fa-address-card"></i></a>
										<a data-toggle="tooltip" data-placement="top" title="Avaliação Completa" asp-action="Details" asp-controller="Laudo" asp-route-id="1" class="on-default edit-row" style='color: #d2322d'><i class="fa fa-bar-chart"></i></a>
										<a data-toggle="tooltip" data-placement="top" title="Relatório" asp-action="Details" asp-controller="Laudo" asp-route-id="1" class="on-default edit-row" style='color: #47a447'><i class="fa fa-file-text"></i></a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</section>
		</div>
	</div>
	<!-- Modal -->
	<div class="modal fade" id="mdDeleteLaudo" tabindex="-1" role="dialog" aria-labelledby="mdDeleteLaudoLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="mdDeleteLaudoLabel">
						<i class="fa fa-trash"></i> &nbsp;&nbsp;<strong>Exclusão de Laudo</strong>
					</h5>
				</div>
				<div class="modal-body">
					<div class="modal-icon">
						<i class="fa fa-question-circle"></i>
					</div>
					<div class="modal-text">
						<input type="hidden" id="deleteLaudoId" />
						<p class="mb-0">Tem certeza que deseja <b>excluir</b> esse registro?</p>
					</div>
					<div class="modal-wrapper">
					</div>
				</div>
				<div class="modal-footer">
					<button type="submit" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-thumbs-o-down"></i> &nbsp;&nbsp;Não</button>
					<a id="deleteLaudoHref" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-thumbs-o-up"></i> &nbsp;&nbsp;Sim</a>
				</div>
			</div>
		</div>
	</div>
	<!-- Modal -->
	<div class="modal fade" id="mdEditLaudo" tabindex="-1" role="dialog" aria-labelledby="mdEditLaudoLabel" aria-hidden="true">
		<div class="modal-dialog modal-lg" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="mdEditLaudoLabel">
						<i class="fa fa-trash"></i> &nbsp;&nbsp;<strong>Alterar Laudo</strong>
					</h5>
				</div>
				@using (@Html.BeginForm("Edit", "Laudo", FormMethod.Post, new { id = "formEditLaudo", @class = "form-horizontal" }))
				{
					<input type="hidden" name="editLaudoId" :value="editDto.Id" />

					<div class="modal-body">
						<div class="form-group row">
							<label class="col-sm-2 control-label text-sm-right pt-2">Laudo <span class="required">*</span></label>
							<div class="col-sm-10">
								<input type="text" name="nome" class="form-control"
									   maxlength="80" :value="editDto.Nome"
									   title="Por favor informe o Laudo." required />
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-2 control-label text-sm-right pt-2">Descrição <span class="required">*</span></label>
							<div class="col-sm-10">
								<input type="text" name="descricao" class="form-control"
									   maxlength="80" :value="editDto.Descricao"
									   title="Por favor informe a descrição." required />
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-2 control-label text-sm-right pt-2">Idade Inicial <span class="required">*</span></label>
							<div class="col-sm-2">
								<input type="number" name="idadeIni" class="form-control"
									   maxlength="80" :value="editDto.IdadeInicial" min="0" max="100"
									   title="Por favor informe a idade inicial." required />
							</div>
							<label class="col-sm-2 control-label text-sm-right pt-2">Idade Final <span class="required">*</span></label>
							<div class="col-sm-2">
								<input type="number" name="idadeFim" class="form-control"
									   maxlength="80" :value="editDto.IdadeFinal" min="0" max="100"
									   title="Por favor informe a idade final." required />
							</div>
							<label class="col-sm-2 control-label text-sm-right pt-2">ScoreTotal <span class="required">*</span></label>
							<div class="col-sm-2">
								<input type="number" name="scoreTotal" class="form-control"
									   maxlength="80" :value="editDto.ScoreTotal" min="0" max="100"
									   title="Por favor informe o score total." required />
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-3 control-label text-sm-right pt-2">Status</label>
							<div class="col-md-3">
								<div class="switch switch-sm switch-primary">
									<div v-show="editDto.Status">
										<input type="checkbox" id="editStatus" name="editStatus" data-plugin-ios-switch checked="checked" />
									</div>
									<div v-show="!editDto.Status">
										<input type="checkbox" id="editStatus" name="editStatus" data-plugin-ios-switch />
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="reset" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
						<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
					</div>
				}
			</div>
		</div>
	</div>
</div>

@section CssSpecificVendor {
	<link rel="stylesheet" href="~/assets/vendor/datatables/media/css/dataTables.bootstrap4.css" />
}
@section Scripts {
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
	<script src="~/assets/vendor/ios7-switch/ios7-switch.js"></script>
	<script src="~/assets/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
	<script src="~/assets/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
	<script src="~/js/formatTable.js"></script>
	<script src="~/js/Laudo.js"></script>

	<script>

		(function ($) {

			'use strict';
			var crub = @ViewBag.CrudMessage;

			if (crub === 1) {
				new PNotify({
					title: 'Laudo',
					text: 'Cadastro realizado com sucesso!',
					type: 'success'
				});
				crub = 0;
			} else if (crub === 2) {
				new PNotify({
					title: 'Laudo',
					text: 'Dados alterados com sucesso.',
					type: 'warning',
					icon: 'fa fa-pencil'
				});
				crub = 0;
			} else if (crub === 3) {
				new PNotify({
					title: 'Laudo',
					text: 'Registro excluído com sucesso.',
					type: 'error',
					icon: 'fa fa-trash-o'
				});
				crub = 0;
			}


			var notify = @ViewBag.NotifyMessage;
			var messagem = '@ViewBag.Notify';

			if (notify === 0) {
				new PNotify({
					title: 'Laudo',
					text: messagem,
					type: 'success'
				});
				crub = 0;
			} else if (notify === 1) {
				new PNotify({
					title: 'Laudo',
					text: messagem,
					type: 'warning'
				});
				crub = 0;
			} else if (notify === 2) {
				new PNotify({
					title: 'Laudo',
					text: messagem,
					type: 'error'
				});
				crub = 0;
			}

			if ($.isFunction($.fn['tooltip'])) {
				$('[data-toggle=tooltip],[rel=tooltip]').tooltip({ container: 'body' });
			}

		}).apply(this, [jQuery]);
	</script>
}



