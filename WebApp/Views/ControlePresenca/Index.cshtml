@model WebApp.Models.ControlePresencaModel
@{
	ViewData["Title"] = "Listagem de ControlePresencas";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="vControlePresenca">
	<div class="row">
		<div class="col-lg-12">
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
					</div>
					<h2 class="panel-title">Listagem de Controles de Presenças</h2>
				</header>
				<div class="panel-body">
					<div class="form-group row">
						<div class="col-sm-12 pull-right">
							<a href="@Url.Action("Create", "ControlePresenca")" id="addToTable" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Novo Controle de Presença </a>
						</div>
					</div>
					<table class="table table-bordered table-striped mb-0" id="datatable-default">
						<thead>
							<tr>
								<th class="text-center">Id</th>
								<th class="text-center">Aluno</th>
								<th class="text-center">Controle</th>
								<th class="text-center">Justificativa</th>
								<th class="text-center">Status</th>
								<th class="text-center">Ações</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model.ControlePresencas)
							{
								<tr>
									<td class="text-center" style="width:20px;">@Html.DisplayFor(modelItem => item.Id)</td>
									<td class="text-center" style="width:20px;">@Html.DisplayFor(modelItem => item.Aluno)</td>
									<td class="text-center" style="width:20px;">@Html.DisplayFor(modelItem => item.Controle)>
									<td class="text-center" style="width:20px;">@Html.DisplayFor(modelItem => item.Justificativa)</td>
										@if (item.Status)
										{
										<td class="text-center"><span class="label label-success">ATIVO</span></td>
										}
										else
										{
										<td class="text-center"><span class="label label-danger">INATIVO</span></td>
										}
									<td class="actions">
										<a data-toggle="tooltip" data-placement="top" title="Editar"
										   href='javascript:(crud.EditModal(@item.Id))'
										   class="on-default edit-row" style='color: #FF9800'>
											<i class="fa fa-pencil"></i>
										</a>
										<a data-toggle="tooltip" data-placement="top" title="Excluir" href='javascript:(crud.DeleteModal(@item.Id))'
										   class="on-default remove-row" style="cursor: pointer;color: #F44336"><i class="fa fa-trash"></i></a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</section>
		</div>
	</div>
	<!-- Modal -->
	<div class="modal fade" id="mdDeleteControlePresenca" tabindex="-1" role="dialog" aria-labelledby="mdDeleteControlePresencaLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="mdDeleteControlePresencaLabel">
						<i class="fa fa-trash"></i> &nbsp;&nbsp;<strong>Exclusão de ControlePresenca</strong>
					</h5>
				</div>
				<div class="modal-body">
					<div class="modal-icon">
						<i class="fa fa-question-circle"></i>
					</div>
					<div class="modal-text">
						<input type="hidden" id="deleteControlePresencaId" />
						<p class="mb-0">Tem certeza que deseja <b>excluir</b> esse registro?</p>
					</div>
					<div class="modal-wrapper">
					</div>
				</div>
				<div class="modal-footer">
					<button type="submit" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-thumbs-o-down"></i> &nbsp;&nbsp;Não</button>
					<a id="deleteControlePresencaHref" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-thumbs-o-up"></i> &nbsp;&nbsp;Sim</a>
				</div>
			</div>
		</div>
	</div>
	<!-- Modal -->
	<div class="modal fade" id="mdEditControlePresenca" tabindex="-1" role="dialog" aria-labelledby="mdEditControlePresencaLabel" aria-hidden="true">
		<div class="modal-dialog modal-md" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="mdEditControlePresencaLabel">
						<i class="fa fa-trash"></i> &nbsp;&nbsp;<strong>Alterar ControlePresenca</strong>
					</h5>
				</div>
				@using (@Html.BeginForm("Edit", "ControlePresenca", FormMethod.Post, new { id = "formEditControlePresenca", @class = "form-horizontal" }))
				{
					<input type="hidden" name="editControlePresencaId" :value="editDto.Id" />

					<div class="modal-body">
						<div class="form-group">
							<label class="col-sm-2 control-label text-sm-right pt-2">Estado <span class="required">*</span></label>
							<div class="col-md-4">
								<select class="form-control populate select2" name="ddlEstado" id="ddlEstado"
										title="Por favor informe um Estado." required
										asp-for="EstadoId" asp-items="Model.ListEstados">
									<option value="">Selecionar Estado</option>
								</select>
							</div>
							<label class="col-sm-2 control-label text-sm-right pt-2">Município <span class="required">*</span></label>
							<div class="col-md-4">
								<select class="form-control populate select2" name="ddlMunicipio" id="ddlMunicipio"
										title="Por favor informe um Municipio." required
										asp-for="MunicipioId" asp-items="Model.ListMunicipios">
									<option value="">Selecionar Município</option>
								</select>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label text-sm-right pt-2">Localidade <span class="required">*</span></label>
							<div class="col-md-4">
								<select class="form-control populate select2" name="ddlLocalidade" id="ddlLocalidade"
										title="Por favor informe a localidade." required
										asp-for="LocalidadeId" asp-items="Model.ListLocalidades">
									<option value="">Selecionar Localidade</option>
								</select>
							</div>
							<label class="col-sm-2 control-label text-sm-right pt-2">Aluno <span class="required">*</span></label>
							<div class="col-md-4">
								<select class="form-control populate select2" name="ddlAluno" id="ddlAluno"
										title="Por favor informe um Aluno." required
										asp-for="AlunoId" asp-items="Model.ListAlunos">
									<option value="">Selecionar Aluno</option>
								</select>
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-3 control-label text-sm-right pt-2">Controle <span class="required">*</span></label>
							<div class="col-sm-3">
								<input type="number" name="controle" class="form-control" maxlength="2"
									   title="Por favor informe o controle." required />
							</div>
							<label class="col-sm-2 control-label text-sm-right pt-2">Justificativa <span class="required">*</span></label>
							<div class="col-sm-3">
								<input type="number" name="justificativa" class="form-control" maxlength="2"
									   title="Por favor informe a justificativa." required />
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-3 control-label text-sm-right pt-2">Status</label>
							<div class="col-md-3">
								<div class="switch switch-sm switch-primary">
									<div v-show="editDto.Status">
										<input type="checkbox" id="editStatus" name="editStatus" data-plugin-ios-switch checked="checked" />
									</div>
									<div v-show="!editDto.Status">
										<input type="checkbox" id="editStatus" name="editStatus" data-plugin-ios-switch />
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="reset" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
						<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
					</div>
				}
			</div>
		</div>
	</div>
</div>

@section CssSpecificVendor {
	<link rel="stylesheet" href="~/assets/vendor/datatables/media/css/dataTables.bootstrap4.css" />
}
@section Scripts {
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
	<script src="~/assets/vendor/ios7-switch/ios7-switch.js"></script>
	<script src="~/assets/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
	<script src="~/assets/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
	<script src="~/js/formatTable.js"></script>
	<script src="~/js/ControlePresenca.js"></script>

	<script>

		(function ($) {

			'use strict';
			var crub = @ViewBag.CrudMessage;

			if (crub === 1) {
				new PNotify({
					title: 'ControlePresenca',
					text: 'Cadastro realizado com sucesso!',
					type: 'success'
				});
				crub = 0;
			} else if (crub === 2) {
				new PNotify({
					title: 'ControlePresenca',
					text: 'Dados alterados com sucesso.',
					type: 'warning',
					icon: 'fa fa-pencil'
				});
				crub = 0;
			} else if (crub === 3) {
				new PNotify({
					title: 'ControlePresenca',
					text: 'Registro excluído com sucesso.',
					type: 'error',
					icon: 'fa fa-trash-o'
				});
				crub = 0;
			}


			var notify = @ViewBag.NotifyMessage;
			var messagem = '@ViewBag.Notify';

			if (notify === 0) {
				new PNotify({
					title: 'ControlePresenca',
					text: messagem,
					type: 'success'
				});
				crub = 0;
			} else if (notify === 1) {
				new PNotify({
					title: 'ControlePresenca',
					text: messagem,
					type: 'warning'
				});
				crub = 0;
			} else if (notify === 2) {
				new PNotify({
					title: 'ControlePresenca',
					text: messagem,
					type: 'error'
				});
				crub = 0;
			}

			if ($.isFunction($.fn['tooltip'])) {
				$('[data-toggle=tooltip],[rel=tooltip]').tooltip({ container: 'body' });
			}

		}).apply(this, [jQuery]);
	</script>
}



