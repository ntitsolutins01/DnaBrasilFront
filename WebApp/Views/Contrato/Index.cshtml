@model WebApp.Models.ContratoModel
@{
	ViewData["Title"] = "Listagem de Contratos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
	<div class="col-lg-12">
		<section class="panel">
			<header class="panel-heading">
				<div class="panel-actions">
					<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
				</div>
				<h2 class="panel-title">Listagem de Contratos</h2>
			</header>
			<div class="panel-body">
				<div class="form-group row">
					<div class="col-sm-12 pull-right">
						<a href="@Url.Action("Create", "Contrato")" id="addToTable" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Novo Contrato </a>
					</div>
				</div>
				<table class="table table-bordered table-striped mb-0" id="datatable-default">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nome da Contrato</th>
							<th>Status</th>
							<th>Ações</th>
						</tr>
					</thead>
					<tbody>
						@* @foreach (var item in Model.Contratos)
						{ *@
						<tr>
							@* <td>@Html.DisplayFor(modelItem => item.Id)</td>
							<td>@Html.DisplayFor(modelItem => item.Nome)</td>
							<td>@Html.DisplayFor(modelItem => item.Descricao)</td>
							<td>@Html.DisplayFor(modelItem => item.DtIni)</td>
							<td>@Html.DisplayFor(modelItem => item.DtFim)</td>
							<td>@Html.DisplayFor(modelItem => item.Anexo)</td> *@
							<td class="actions">
								<a title="Editar" type="button" data-toggle="modal" data-target="#mdEdit" style="cursor: pointer; color: #FF9800"><i class="fa fa-pencil"></i></a>
								<a title="Excluir" type="button" data-toggle="modal" data-target="#mdDelete" style="cursor: pointer; color: #F44336"><i class="fa fa-trash"></i></a>
							</td>
						</tr>
						@* } *@
					</tbody>
				</table>
			</div>
		</section>
	</div>
</div>
<!-- Modal -->
<div class="modal fade" id="mdDelete" tabindex="-1" role="dialog" aria-labelledby="mdDeleteLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="mdDeleteLabel">
					<i class="fa fa-trash"></i> &nbsp;&nbsp;<strong>Exclusão de contrato</strong>
				</h5>
			</div>
			<div class="modal-body">
				<div class="modal-icon">
					<i class="fa fa-question-circle"></i>
				</div>
				<div class="modal-text">
					<p class="mb-0">Tem certeza que deseja <b>excluir</b> esse registro?</p>
				</div>
				<div class="modal-wrapper">
				</div>
			</div>
			<div class="modal-footer">
				<button type="submit" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-thumbs-o-down"></i> &nbsp;&nbsp;Não</button>
				<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-thumbs-o-up"></i> &nbsp;&nbsp;Sim</button>
			</div>
		</div>
	</div>
</div>
<!-- Modal -->
<div class="modal fade" id="mdEdit" tabindex="-1" role="dialog" aria-labelledby="mdEditLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="mdEditLabel">
					<i class="fa fa-pencil"></i> &nbsp;&nbsp;<strong>Alterar contrato</strong>
				</h5>
			</div>
			<div class="modal-body">
				@using (@Html.BeginForm("Edit", "Contrato", FormMethod.Post,
						new { id = "formEditContrato", @class = "form-horizontal" }))
				{
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2"> Nome do Contrato <span class="required">*</span></label>
						<div class="col-sm-9">
							<input type="text" name="nome" class="form-control"
								   maxlength="50" style="text-transform:uppercase"
								   title="Por favor informe o nome do contrato." required />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Descrição <span class="required">*</span></label>
						<div class="col-sm-9">
							<input type="text" name="descricao" class="form-control"
								   maxlength="100" title="Por favor informe a descrição." required />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Data de Início <span class="required">*</span></label>
						<div class="col-sm-9">
							<div class="input-group">
								<span class="input-group-addon">
									<i class="fa fa-calendar"></i>
								</span>
								<input id="dtIni" name="dtIni"
									   required
									   title="Por favor informe a data de início."
									   style="z-index: auto;"
									   data-plugin-datepicker data-date-format="dd/mm/yyyy" data-plugin-options='{"language": "pt-BR"}'
									   placeholder="__/__/____" class="form-control startdate"
									   class="form-control">
							</div>
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Data de Fim <span class="required">*</span></label>
						<div class="col-sm-9">
							<div class="input-group">
								<span class="input-group-addon">
									<i class="fa fa-calendar"></i>
								</span>
								<input id="dtFim" name="dtFim"
									   required
									   title="Por favor informe a data de fim."
									   style="z-index: auto;"
									   data-plugin-datepicker data-date-format="dd/mm/yyyy" data-plugin-options='{"language": "pt-BR"}'
									   placeholder="__/__/____" class="form-control startdate"
									   class="form-control">
							</div>
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Anexo <span class="required">*</span></label>
						<div class="col-sm-9">
							<div class="fileupload fileupload-new" data-provides="fileupload">
								<div class="input-append">
									<div class="uneditable-input">
										<i class="fa fa-file fileupload-exists"></i>
										<span class="fileupload-preview"></span>
									</div>
									<span class="btn btn-default btn-file">
										<span class="fileupload-exists">Change</span>
										<span class="fileupload-new">Select file</span>
										<input type="file" />
									</span>
									<a href="#" class="btn btn-default fileupload-exists" data-dismiss="fileupload">Remove</a>
								</div>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="reset" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
						<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
					</div>
				}
			</div>
		</div>
	</div>
</div>
@section CssSpecificVendor {
	<link rel="stylesheet" href="~/assets/vendor/datatables/media/css/dataTables.bootstrap4.css" />
	<link rel="stylesheet" href="~/assets/vendor/bootstrap-fileupload/bootstrap-fileupload.min.css" />
}
@section Scripts {
	<script src="~/assets/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
	<script src="~/assets/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
	<script src="~/js/formatTable.js"></script>
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
	<script src="~/assets/vendor/jquery-mask/jquery.mask.js"></script>
	<script src="~/assets/vendor/bootstrap-fileupload/bootstrap-fileupload.min.js"></script>
	<script src="~/js/contrato.js"></script>

	<script>

		(function ($) {

			'use strict';
			var crub = @ViewBag.CrudMessage;

			if (crub === 1) {
				new PNotify({
					title: 'Contrato',
					text: 'Cadastro realizado com sucesso!',
					type: 'success'
				});
			} else if (crub === 2) {
				new PNotify({
					title: 'Contrato',
					text: 'Dados alterados com sucesso.',
					type: 'warning',
					icon: 'fa fa-pencil'
				});
			} else if (crub === 3) {
				new PNotify({
					title: 'Contrato',
					text: 'Registro excluído com sucesso.',
					type: 'error',
					icon: 'fa fa-trash-o'
				});
			}
			if ($.isFunction($.fn['tooltip'])) {
				$('[data-toggle=tooltip],[rel=tooltip]').tooltip({ container: 'body' });
			}

		}).apply(this, [jQuery]);
	</script>
}



