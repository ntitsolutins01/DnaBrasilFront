@model EventoModel

@{
    ViewData["Title"] = "Inclusão de Controle de Presença do Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="vEvento">
    <div class="row">
        <div class="col-md-12">
            @using (@Html.BeginForm("CreateControlePresenca", "Evento", FormMethod.Post, new { id = "formControlePresencaEvento", @class = "form-horizontal" }))

            {
                <section class="panel">
                    <header class="panel-heading">
                        <div class="panel-actions">
                            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                        </div>
                        <h2 class="panel-title">Cadastro de Controle de Presença do Evento @Model.Evento.Titulo</h2>
                    </header>
                    <div class="panel-body">
                        <input type="hidden" id="eventoId" name="eventoId" value="@Model.Evento.Id" />
                        <input type="hidden" id="convidadoId" name="convidadoId" value="@Model.Convidado!.Id" />
                        <div class="form-group">
                            <label class="col-sm-2 control-label text-sm-right pt-2">Estado </label>
                            <div class="col-md-4">
                                <input type="hidden" id="estadoId" name="estadoId" value="@Model.Evento.EstadoId" />
                                <input type="text" name="estado" class="form-control" readonly value="@Model.Evento.Estado" />
                            </div>
                            <label class="col-sm-1 control-label text-sm-right pt-2">Município </label>
                            <div class="col-md-5">
                                <input type="hidden" id="municipioId" name="municipioId" value="@Model.Evento.MunicipioId" />
                                <input type="text" name="municipio" class="form-control" readonly value="@Model.Evento.Municipio" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label text-sm-right pt-2">Localidade </label>
                            <div class="col-md-4">
                                <input type="hidden" id="localidadeId" name="localidadeId" value="@Model.Evento.LocalidadeId" />
                                <input type="text" name="localidade" class="form-control" readonly value="@Model.Evento.Localidade" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label text-sm-right pt-2">Público <span class="required">*</span></label>
                            <div class="col-sm-4">
                                <div class="radio-custom radio-primary">
                                    <input type="radio" id="aluno" name="alunoConvidadoEvento" checked value="A" required title="Por favor selecione uma opção">
                                    <label>Aluno</label>
                                </div>
                                <div class="radio-custom">
                                    <input type="radio" id="convidado" name="alunoConvidadoEvento" value="C" required title="Por favor selecione uma opção">
                                    <label>Convidado</label>
                                </div>
                                <label class="error" for="alunoConvidadoEvento"></label>
                            </div>
                            <label class="col-sm-2 control-label text-sm-right pt-2">Controle <span class="required">*</span></label>
                            <div class="col-sm-4">
                                <div class="radio-custom radio-success">
                                    <input type="radio" id="controlePresente" name="controle" value="P" required title="Por favor selecione uma opção">
                                    <label>Presente</label>
                                </div>
                                <div class="radio-custom radio-danger">
                                    <input type="radio" id="controleFalta" name="controle" value="F" required title="Por favor selecione uma opção">
                                    <label>Falta</label>
                                </div>
                                <label class="error" for="controle"></label>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div v-if="params.visible" id="hideAluno">
                                <label class="col-sm-2 control-label text-sm-right pt-2">Aluno <span class="required">*</span></label>
                                <div class="col-md-5">
                                    <select class="form-control populate select2" name="ddlAluno" id="ddlAluno"
                                            title="Por favor informe um Aluno." required
                                            asp-for="AlunoId" asp-items="Model.ListAlunos">
                                        <option value="">Selecionar Aluno</option>
                                    </select>
                                </div>
                            </div>
                            <div v-if="!params.visible" id="hideConvidados">
                                <label class="col-sm-2 control-label text-sm-right pt-2">Convidado <span class="required">*</span></label>
                                <div class="col-md-10">
                                    <textarea type="text" name="convidado" class="form-control" required title="Por favor informe o nome do Convidado." rows="9">
Nome Completo:
Idade:
Endereço:
Telefone:
Convidado De:
Grau Parentesco:
Como soube do Evento:
Como chegou ao Evento:
Número sorteio:
                                        </textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer class="panel-footer">
                        <div class="row">
                            <div class="col-md-9 col-md-offset-3">
                                <a href="@Url.Action("IndexControlePresenca", "Evento", new {eventoId = Model.Evento.Id})" class="btn btn-dark pull-right" style="margin-left: 5px;margin-right: 5px;"><i class="fa fa-reply"></i> &nbsp;&nbsp;Voltar</a>
                                <button type="reset" class="btn btn-danger pull-right" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
                                <button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
                            </div>
                        </div>
                    </footer>
                </section>
            }
        </div>
    </div>
</div>

@section CssSpecificVendor {
    <link rel="stylesheet" href="~/assets/vendor/select2/css/select2.css" />
    <link rel="stylesheet" href="~/assets/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
}
@section Scripts {
    <script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/assets/vendor/select2/js/select2.js"></script>
    <script src="~/js/evento.js"></script>
    <script>

        (function ($) {

            'use strict';
            var crud = @ViewBag.CrudMessage;

            if (crud === 1) {
                new PNotify({
                    title: 'Controle Presença Evento',
                    text: 'Cadastro realizado com sucesso!',
                    type: 'success'
                });
            } else if (crud === 2) {
                new PNotify({
                    title: 'Controle Presença Evento',
                    text: 'Dados alterados com sucesso.',
                    type: 'warning'
                });
            } else if (crud === 3) {
                new PNotify({
                    title: 'Controle Presença Evento',
                    text: 'Registro excluído com sucesso.',
                    type: 'error'
                });
            }

            var notify = @ViewBag.NotifyMessage;
            var messagem = '@ViewBag.Notify';

            if (notify === 0) {
                new PNotify({
                    title: 'Controle Presença Evento',
                    text: messagem,
                    type: 'success'
                });
            } else if (notify === 1) {
                new PNotify({
                    title: 'Controle Presença Evento',
                    text: messagem,
                    type: 'warning'
                });
            } else if (notify === 2) {
                new PNotify({
                    title: 'Controle Presença Evento',
                    text: messagem,
                    type: 'error'
                });
            }

        }).apply(this, [jQuery]);

    </script>
}